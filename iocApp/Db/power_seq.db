record(mbbo, "GBL-OP:getState")
{
    field(DESC, "gets operation state")
    field(SCAN, "Passive")
    field(VAL, "0")
    field(PINI, "YES")
    field(ZRVL, "0") field(ZRST, "Idle") field(ZRSV, "NO_ALARM")
    field(ONVL, "1") field(ONST, "Powerup") field(ONSV, "NO_ALARM")
    field(TWVL, "2") field(TWST, "Powerdown") field(TWSV, "NO_ALARM")
    field(THVL, "3") field(THST, "Failure") field(THSV, "MINOR")
    field(UNSV, "MINOR")
}

record(mbbi, "GBL-OP:setState")
{
    field(DESC, "sets operation state")
    field(SCAN, "Passive")
    field(VAL, "0")
    field(PINI, "YES")
    field(ZRVL, "0") field(ZRST, "Idle") field(ZRSV, "NO_ALARM")
    field(ONVL, "1") field(ONST, "Powerup") field(ONSV, "NO_ALARM")
    field(TWVL, "2") field(TWST, "Powerdown") field(TWSV, "NO_ALARM")
    field(UNSV, "MINOR")
}

record(stringin, "GBL-OP:getStage")
{
    field(DESC, "gets sequence stage")
    field(SCAN, "Passive")
    field(VAL, "Idle")
    field(PINI, "YES")
}

record(bi, "GBL-OP:reset")
{
    #> invalid prefix ('is' is the only allowed prefix for 'bi' records)
    field(DESC, "resets failure")
    field(SCAN, "Passive")
    field(RVAL, "0")
    field(PINI, "YES")
    field(ZNAM, "") field(ZSV, "NO_ALARM")
    field(ONAM, "Resetting") field(OSV, "NO_ALARM")
}

